+    len = datatype_size * count;
+
+    if (file_ptr_type == ADIO_EXPLICIT_OFFSET) {
+	if (fd->fp_sys_posn != offset) 
+	     err = xpn_pwrite(fd->fd_sys, buf, len, (int)offset);
+	else err = xpn_write(fd->fd_sys, buf, len);
+	fd->fp_sys_posn = offset + err;
