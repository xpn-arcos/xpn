+     printf("%ld = xpn_pwrite(%ld,%p,%lld,%ld);\n",err,fd->fd_sys,buf,len,fd->fp_ind);
+else printf("%ld = xpn_write(%ld,%p,%ld);\n",err,fd->fd_sys,buf,len);
